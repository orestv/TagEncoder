<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Spinner
            android:id="@+id/spEncoding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/encoding_prompt"
            />
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">            
        <TextView
            android:id="@+id/LabelTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_update_title"/>
        <EditText
            android:id="@+id/Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LabelTitle"
            />
        <Button
            android:id="@+id/UpdateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_title"
            android:layout_below="@id/Title"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">            
        <TextView
            android:id="@+id/LabelAlbum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_update_album"/>
        <EditText
            android:id="@+id/Album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LabelAlbum"
            />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Album"                
                >
            <CheckBox
            android:id="@+id/UpdateWholeAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_album_everywhere"
            android:layout_gravity="left"
            android:layout_weight="4"
            />
            <Button
            android:id="@+id/UpdateAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_album"
            android:layout_gravity="right"
            android:layout_weight="2"
        />
        </LinearLayout>
    </RelativeLayout>
    <EditText
            android:id="@+id/Artist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    <Button
            android:id="@+id/UpdateArtist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_artist"
        />
</LinearLayout>

